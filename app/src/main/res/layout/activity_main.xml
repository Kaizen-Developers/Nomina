<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="1. "/>
        <EditText android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/edsalario"
                  android:digits="0987654321"
                  android:textSize="18sp"
                  android:hint="Salario"
                  android:inputType="number"/>

        <EditText android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/edextra"
                  android:digits="0987654321"
                  android:textSize="18sp"
                  android:hint="H. Extra"
                  android:inputType="number"/>

        <EditText android:layout_width="130dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/edbonifica"
                  android:digits="0987654321"
                  android:textSize="18sp"
                  android:hint="Bonificacion"
                  android:inputType="number"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/subtotal"
                  android:textSize="20dp"
                    android:text="0"/>
    </LinearLayout>


</LinearLayout>